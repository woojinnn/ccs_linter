{
    "name": "ccs",
    "displayName": "CCS_Linter",
    "description": "Syntax highlighting for the Filament Programing Language",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.54.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ccs",
                "aliases": [
                    "CCS"
                ],
                "extensions": [
                    ".ccs"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ccs",
                "scopeName": "source.ccs",
                "path": "./syntaxes/ccs.tmLanguage.json"
            }
        ]
    }
}